@model Teacher
@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Create Teacher</h4>
                <form class="forms-sample" method="post">
                    <div class="form-group">
                        <label asp-for="TeacherName">TeacherName</label>
                        <input class="form-control" asp-for="TeacherName">
                        <span class="text-danger" asp-validation-for="TeacherName"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TeacherImage">TeacherImage</label>
                        <textarea class="form-control" asp-for="TeacherImage" rows="1"></textarea>
                        <span class="text-danger" asp-validation-for="TeacherImage"></span>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <a class="btn btn-light" asp-action="Index">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>


